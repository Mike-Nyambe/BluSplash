---
import Footer from "../components/elements/Footer.astro";
import Navbar from "../components/elements/Navbar.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-KSN3HDKP");
    </script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Blu-splash Engineering is a Zambian-owned company incorporated in Zambia, specializing in mining, manufacturing, water treatment, and condition monitoring. With a team of Zambian professionals boasting diverse experience, we are technologically driven and possess extensive applications experience across various industries. We excel in promptly addressing critical problems with optimal solutions, leveraging our expanding knowledge base and expertise in process optimization. Our commitment to peak efficiency ensures long-term operational success for our clients, as we combine unique processes with global industry expertise to deliver efficient and effective solutions—mechanically, chemically, operationally, and financially."
    />
    <meta
      name="keywords"
      content="Blu-splash Engineering, Zambian owned company, Zambia, Mining, Manufacturing, Water treatment, Condition monitoring, Technologically driven, Applications experience, Prompt problem-solving, Knowledge base, Process optimization, Peak efficiency, Industry expertise, Global industry players, Efficient solutions, Effective solutions, Mechanical solutions, Chemical solutions, Operational solutions, Financial solutions"
    />
    <meta name="author" content="Mike Nyambe" />
    <meta name="robots" content="index, follow" />
    <meta name="revisit-after" content="7 days" />
    <meta name="distribution" content="global" />
    <meta name="rating" content="general" />
    <meta name="referrer" content="no-referrer-when-downgrade" />
    <meta property="og:title" content="Blu Splash - {title}" />
    <meta
      property="og:description"
      content="Blu-splash Engineering is a Zambian-owned company incorporated in Zambia, specializing in mining, manufacturing, water treatment, and condition monitoring. With a team of Zambian professionals boasting diverse experience, we are technologically driven and possess extensive applications experience across various industries. We excel in promptly addressing critical problems with optimal solutions, leveraging our expanding knowledge base and expertise in process optimization. Our commitment to peak efficiency ensures long-term operational success for our clients, as we combine unique processes with global industry expertise to deliver efficient and effective solutions—mechanically, chemically, operationally, and financially."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.blu-splash.com" />
    <meta
      property="og:image"
      content="https://www.blu-splash.com/images/blu-logo.png"
    />
    <meta property="og:site_name" content="Blu Splash" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Blu Splash - {title}" />
    <meta
      name="twitter:description"
      content="Your website description goes here."
    />
    <meta
      name="twitter:image"
      content="https://www.example.com/twitter-image.jpg"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href="https://www.example.com/" />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="overflow-hidden overflow-y-auto bg-body">
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-KSN3HDKP"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <Navbar />
    <slot />
    <Footer />
  </body>
  <script
    type="text/javascript"
    src="../node_modules/tw-elements/dist/js/tw-elements.umd.min.js"></script>
  <script>
    const toggleMenu = document.querySelector(
      "[data-toggle-nav]"
    ) as HTMLButtonElement;
    const navbar = document.querySelector("[data-navbar]") as HTMLDivElement;
    const overlayNav = document.querySelector(
      "[data-nav-overlay]"
    ) as HTMLDivElement;
    if (toggleMenu) {
      toggleMenu.addEventListener("click", (e) => {
        e.preventDefault();
        if (toggleMenu.getAttribute("data-open-nav") === "false") {
          toggleMenu.setAttribute("data-open-nav", "true");
          overlayNav.setAttribute("data-is-visible", "true");
          document.body.classList.add("!overflow-y-hidden");
          navbar.style.height = `${navbar.scrollHeight}px`;
        } else {
          toggleMenu.setAttribute("data-open-nav", "false");
          overlayNav.setAttribute("data-is-visible", "false");
          document.body.classList.remove("!overflow-y-hidden");
          navbar.style.height = "0px";
        }
      });

      navbar.addEventListener("click", () => {
        toggleMenu.setAttribute("data-open-nav", "false");
        overlayNav.setAttribute("data-is-visible", "false");
        document.body.classList.remove("!overflow-y-hidden");
        navbar.style.height = "0px";
      });

      overlayNav.addEventListener("click", () => {
        toggleMenu.setAttribute("data-open-nav", "false");
        overlayNav.setAttribute("data-is-visible", "false");
        document.body.classList.remove("!overflow-y-hidden");
        navbar.style.height = "0px";
      });
    }
  </script>
</html>
<style is:global>
  :root {
    --color-bg: 255 255 255;
    --color-border: 255 255 255;
    --color-box: 255 255 255;
    --box-border: 229 231 235;
    --box-sd: 226 232 240 / 0.5;
    --heading-1: 23 37 84;
    --heading-2: 31 41 55;
    --heading-3: 55 65 81;
  }

  .dark {
    --color-bg: 3 7 18;
    --color-box: 17 24 39;
    --box-border: 243 244 246/0.1;
    --box-sd: transparent;

    --heading-1: 255 255 255;
    --heading-2: 243 244 246;
    --heading-3: 209 213 219;
  }

  html {
    scroll-behavior: smooth;
  }
  body {
    font-family: "Raleway", sans-serif;
  }

  [data-toggle-nav][data-open-nav="true"] #line1 {
    transform: translateY(0.375rem) rotate(40deg);
  }
  [data-toggle-nav][data-open-nav="true"] #line2 {
    transform: scaleX(0);
    opacity: 0;
  }
  [data-toggle-nav][data-open-nav="true"] #line3 {
    transform: translateY(-0.375rem) rotate(-40deg);
  }

  [data-nav-overlay][data-is-visible="true"] {
    visibility: visible;
    display: flex;
  }
</style>
